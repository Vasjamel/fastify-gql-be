generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  email       String    @unique
  name        String?
  password    String
}


model Pupil {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  birthday    DateTime
  name        String?
  grade       Int
  lessons     Lesson[]
}

model Lesson {
  id          String      @id @default(cuid())
  createdAt   DateTime    @default(now())
  subject     String
  teacher     Teacher?    @relation(fields: [teacherId], references: id)
  teacherId   String
  pupils      Pupil[]
}

model Teacher {
  id          String     @id @default(cuid())
  createdAt   DateTime    @default(now())
  name        String
  lessons     Lesson[]
}